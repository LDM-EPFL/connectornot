<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inter_dialog"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_white"
        android:layout_gravity="center"
        android:text="@string/prefsTimerTitle"
        android:textSize="25sp"
        android:padding="10dp"/>

    <EditText android:id="@+id/interInput"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:singleLine="true"
        android:inputType="number"
        android:background="@android:drawable/editbox_background_normal"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:orientation="horizontal">

        <Button android:id="@+id/okInter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textColor="@color/text_white"
            android:text="@string/ok"
            android:textSize="18sp"
            android:background="@drawable/button_border"/>
        <Button android:id="@+id/cancelInter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textColor="@color/text_white"
            android:text="@string/cancel"
            android:textSize="18sp"
            android:background="@drawable/button_border"/>
        </LinearLayout>
</LinearLayout><!-- From: file:/Users/louismagarshack/AndroidstudioProjects/connectornot/app/src/main/res/layout/edite_interval_dialog.xml -->